			<li>
				<div class="title" title="{{ voice.sentences.help }}">{{ voice.sentences.title }}</div>
				<div class="value"><button name="sentences" type="button" class="btn btn-sm btn-primary" title="{{ voice.sentences.help }}">{{ manage.normal }}</button></div>
			</li>
			<li>
				<div class="title" title="{{ voice.words.help }}">{{ voice.words.title }}</div>
