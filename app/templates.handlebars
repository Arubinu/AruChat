				<button name="disconnect" type="button" class="btn btn-sm btn-primary" disabled>{{ connection.disconnect }}</button>
			</li>
		</ul>
		<ul class="users">
			<li>
				<div class="btn-group">
					<div class="form-check">
						<label class="form-check-label" title="{{ users.normal }}">
